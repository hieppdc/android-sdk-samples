<resources>

    <!-- Base application theme. -->
    <style name="StringeeAppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/stringee_colorPrimary</item>
        <item name="colorPrimaryDark">@color/stringee_colorPrimaryDark</item>
        <item name="colorAccent">@color/stringee_colorAccent</item>
    </style>

    <!-- Base application theme. -->
    <style name="StringeeAppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/stringee_colorPrimary</item>
        <item name="colorPrimaryDark">@color/stringee_colorPrimaryDark</item>
        <item name="colorAccent">@color/stringee_colorAccent</item>
    </style>

    <style name="MyTheme.FullScreen" parent="@style/Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
    </style>


    <style name="ToolbarTitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Title">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="ToolbarSubtitle" parent="@style/TextAppearance.Widget.AppCompat.Toolbar.Subtitle">
        <item name="android:textSize">14sp</item>
        <item name="android:ellipsize">end</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="Stringee_FullScreen_Theme" parent="@style/Theme.AppCompat">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:textColorSecondary">@color/white</item>
    </style>

    <style name="GalleryTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#333333</item>
        <item name="colorPrimaryDark">#292929</item>
        <item name="colorAccent">#333333</item>
    </style>

</resources>
